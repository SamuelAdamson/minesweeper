@*
    Minesweeper
    Samuel Adamson
*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - minesweeper</title>
    <base href="~/" />
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="css/font.css" asp-append-version="true" />
    <link rel="stylesheet" href="minesweeper.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid justify-content-center">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Minesweeper" asp-action="Index">play</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Minesweeper" asp-action="About">about</a>
                        </li>
                        <li class="nav-item">
                            <!-- External link -->
                            <a class="nav-link" href="https://samueladamson.github.io/#/" target="_blank" rel="noopener noreferrer">portfolio</a>
                        </li>
                        <li class="nav-item">
                            <!-- External link -->
                            <a class="nav-link" href="https://www.linkedin.com/in/samuel-adamson-cs/" target="_blank" rel="noopener noreferrer">linkedin</a>
                        </li>
                        <li class="nav-item">
                            <!-- External link -->
                            <a class="nav-link" href="https://github.com/SamuelAdamson" target="_blank" rel="noopener noreferrer">github</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-auto footer bg-dark">
        <div class="container p-3 pb-0">
            <section class="mb-4">
                <div class="d-flex flex-wrap justify-content-center">
                    <a class="btn m-1" href="https://www.linkedin.com/in/samuel-adamson-cs/" target="_blank" rel="noopener noreferrer">
                        <img class="grow" src="~/img/linkedin.png" height=40 width=40 alt="li"/>
                    </a>
                    <a class="btn m-1" href="https://www.instagram.com/giibb4/" target="_blank" rel="noopener noreferrer">
                        <img class="grow" src="~/img/instagram.png" height=40 width=40 alt="li"/>
                    </a>
                    <a class="btn m-1" href="https://www.youtube.com/channel/UC4nZnhi_pEXX9mt1G2cZyVA" target="_blank" rel="noopener noreferrer">
                        <img class="grow" src="~/img/youtube.png" height=40 width=40 alt="li"/>
                    </a>
                    <a class="btn m-1" href="https://github.com/SamuelAdamson" target="_blank" rel="noopener noreferrer">
                        <img class="grow" src="~/img/github.png" height=40 width=40 alt="li"/>
                    </a>
                    <a class="btn m-1" href="mailto:sadamson@uccs.edu">
                        <img class="grow" src="~/img/outlook.png" height=40 width=40 alt="li"/>
                    </a>
                </div>
            </section>
        </div>
        <div class="text-center foot-tag">
            Samuel Adamson &#8226; Colorado
        </div>
    </footer>
    <script src="lib/jquery/dist/jquery.min.js"></script>
    <script src="lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/site.js" asp-append-version="true"></script>
    <script src="_framework/blazor.server.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
